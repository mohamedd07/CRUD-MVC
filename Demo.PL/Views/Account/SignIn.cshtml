@model SignInViewModel
@{
    ViewData["Title"] = "SignIn";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}


<div class="main-agileinfo">
	<div class="agileits-top">
		@*default method for form is Post*@
		<form asp-action="SignIn">
			<div asp-validation-summary="All"></div>
			
			<input class="text email" asp-for="Email" placeholder="Email" required="">
			<input class="text" asp-for="Password" placeholder="Password" required="">

			<div class="wthree-text">
				<label class="anim">

					<input asp-for="RememberMe" class="checkbox" required="">
					<span>Remember Me</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="SignIn">
		</form>
		<p>You Don't have an Account? <a asp-action="SignUp"> SignUp</a></p>
		<p> <a asp-action="ForgotPassword">Forgot Password</a></p>
	</div>
</div>


