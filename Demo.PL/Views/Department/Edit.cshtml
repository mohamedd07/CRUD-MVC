        <span asp-validation-for="Name" class="text-danger"></span> @*LAZM TKON SPAN*@

    </div>

    <div class="form-group">

        <label class="col-form-label" asp-for="DateOfCreation"> @*Code*@ </label>
        <input asp-for="DateOfCreation" class="form-control" />


    </div>

