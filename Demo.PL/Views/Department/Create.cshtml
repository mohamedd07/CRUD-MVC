@model Department
@{
    ViewData["Title"] = "Create";

}




<h1>Create New Department</h1>


<form asp-action="Create">  


    <div class="form-group">

        <label class="col-form-label" asp-for="Code"> @*Code*@ </label>
        <input asp-for ="Code"  class="form-control"/>

        <span asp-validation-for="Code" class="text-danger"></span>

    </div>


    <div class="form-group">

        <label class="col-form-label" asp-for="Name"> @*Code*@ </label>
        <input asp-for="Name" class="form-control" />

        <span asp-validation-for="Name" class="text-danger"></span> @*LAZM TKON SPAN*@

    </div>

    <div class="form-group">

        <label class="col-form-label" asp-for="DateOfCreation"> @*Code*@ </label>
        <input asp-for="DateOfCreation" class="form-control" />


    </div>

    <input type="submit" value="Create" class="btn btn-primary" />
